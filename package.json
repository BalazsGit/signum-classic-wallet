{
  "name": "signum-classic-wallet",
  "version": "1.0.0",
  "description": "Keeping the legacy code alive",
  "main": "src/index.html",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npx light-server -s src -p 1221 --no-reload",
    "lint": "npx eslint './src/js/brs/*'",
    "build": "node esbuild.config.js",
    "lang": "pushd ./src/locales && ./updateFiles.sh && popd",
    "dev": "npm run build && cp src/index.html src/index.dev.html && sed -i 's/index.min.js/index.dev.js/g' src/index.dev.html",
    "build-all": "npm run lang && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deleterium/signum-classic-wallet.git"
  },
  "keywords": [
    "signum",
    "classic",
    "wallet"
  ],
  "author": "",
  "license": "SEE LICENSE IN src/LICENSES",
  "bugs": {
    "url": "https://github.com/deleterium/signum-classic-wallet/issues"
  },
  "homepage": "https://github.com/deleterium/signum-classic-wallet#readme",
  "dependencies": {
    "light-server": "^2.9.1"
  },
  "devDependencies": {
    "esbuild": "^0.15.12",
    "eslint": "^8.26.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-standard": "^1.0.2",
    "jquery": "^3.6.1",
    "pako": "^2.1.0"
  }
